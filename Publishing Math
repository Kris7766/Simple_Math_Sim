#include <iostream>
#include <ros/ros.h>
#include <std_msgs/String.h>
//#include <string>
//#include <sstream>

//Publisher
ros::Publisher pub_Regnestykke;
ros::Publisher pub_Resultat;

//Variabler
int v1, v2, op1, mat, a = 1;
//bool a = true;

//String
std_msgs::String msg;
std::stringstream ss;

//main function
int main(int argc, char **argv)
{
    ros::init (argc, argv, "Math");
    ros::NodeHandle n;
    pub_Regnestykke = n.advertise<std_msgs::String>("Regnestykke", 1000);
    pub_Resultat = n.advertise<std_msgs::String>("Resultat", 1000);

    while (a != 0 && ros::ok())
    {
        std::cout << "Indtast første værdi her: ";
        std::cin >> v1;
        std::cout << "\nVælg operation; + = 1   - = 2   * = 3   / = 4: ";
        std::cin >> op1;
        std::cout << "\nIndtast anden værdi her: ";
        std::cin >> v2;

        if (op1 == 1)
        {
            std::cout << v1 << " + " << v2;
            mat = v1 + v2;
            std::cout << mat << std::endl;
            ss << v1 << " + " << v2 << std::endl;
        }

        else if (op1 == 2)
        {
            std::cout << v1 << " - " << v2;
            mat = v1 - v2;
            std::cout << mat << std::endl;
            ss << v1 << " - " << v2 << std::endl;
        }

        else if (op1 == 3)
        {
            std::cout << v1 << " * " << v2;
            mat = v1 * v2;
            std::cout << mat << std::endl;
            ss << v1 << " * " << v2 << std::endl;
        }

        else if (op1 == 4)
        {
            std::cout << v1 << " / " << v2;
            mat = v1 / v2;
            std::cout << mat << std::endl;
            ss << v1 << " / " << v2 << std::endl;
        }

        msg.data = ss.str();
        ROS_INFO("%s", msg.data.c_str());
        pub_Regnestykke.publish(msg);
        pub_Resultat.publish(msg);

        ros::spinOnce();

        std::cout << "Tast 0 for at afslutte alt andet for at fortsætte: ";
        std::cout << ss.str() << std::endl;
        std::cin >> a;
    }

    return 0;
}
